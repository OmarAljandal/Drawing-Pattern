// frist this langauge "C++" : 
	#include<iostream>
	using namespace std;
	int main()
	{
	
     for(int i=1;i<=6;i++)
       {
           if(i==3||i==5)
            continue;
           for(int j=1;j<=i;j++)
           {
            cout<<" *";

           }
           cout<<endl;
       }
       cout<<endl;
       cout<<endl;
       for(int i=6;i>=1;i--)
       {
           if(i==3||i==5)
            continue;
           for(int j=1;j<=i;j++)
           {
            cout<<" *";
           }
           cout<<endl;
       }
       cout<<endl;
    cout<<endl;


       for(int i=1;i<=6;i++)
       {
           if(i==3||i==5)
            continue;
           for(int k=6-i;k>0;k--)
            cout<<" ";
           for(int j=1;j<=i;j++)
            cout<<" *";
           cout<<endl;
           }
           cout<<endl;
           cout<<endl;
            for(int i=6;i>=1;i--)
       {
           if(i==3||i==5)
            continue;
           for(int k=6-i;k>0;k--)
            cout<<" ";
           for(int j=1;j<=i;j++)
            cout<<" *";
           cout<<endl;
       }
	cout<<endl;
	cout<<endl;
	cout<<endl;
}
